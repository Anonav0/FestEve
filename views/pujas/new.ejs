<%- include('../partials/header')  -%> 

<div class="container">
    <h1 style="text-align: center;">Create a new Puja Pandal</h1>

    <div style="width: 30%; margin: 25px auto;">
        <form action="/pujas" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="puja[name]" placeholder="name">
                <small id="nameHelp" class="form-text text-muted">This is really very important.</small>
            </div>
            <div class="form-group">
                <label for="image">Image </label>
                <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <label for="adress">Address</label>
                <input class="form-control" type="text" name="puja[loc]" placeholder="ex. shreebhumi">
            </div>
            <div class="form-group">
                <label for="latitude">Latitude</label>
                <input class="form-control" type="text" name="puja[lat]" placeholder="Latitude">
            </div>
            <div class="form-group">
                <label for="Longitude">Longitude</label>
                <input class="form-control" type="text" name="puja[lon]" placeholder="Longitude">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="puja[description]" placeholder="Description">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>  
        <a href="/pujas">Back</a> 
    </div>
    


</div>


<%- include('../partials/footer')  -%> 
